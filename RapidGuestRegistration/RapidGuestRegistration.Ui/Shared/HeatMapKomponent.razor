        //        {99, 28, 22, 4, 66, 90},
        //        {14, 26, 97, 69, 69, 3},
        //        {7, 46, 47, 47, 88, 6},
        //        {41, 55, 73, 23, 3, 79}
        //};
        //    return dataSource;
    }

    public object HeatMapData { get; set; }

    protected override void OnInitialized()
    {
        HeatMapData = GetDefaultData();
    }
}